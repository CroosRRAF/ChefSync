# ChefSync Environment Configuration
# Copy this file to .env and update the values according to your setup

# =============================================================================
# DJANGO BACKEND CONFIGURATION
# =============================================================================

# Security Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-optional-falls-back-to-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Database Configuration (MySQL)
DB_NAME=chefsync_db
DB_USER=root
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=3306

# =============================================================================
# EMAIL CONFIGURATION (Brevo SMTP)
# =============================================================================

# Email Backend (use console for development, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_PASSWORD=your-brevo-smtp-password
DEFAULT_FROM_EMAIL=noreply@chefsync.com

# Frontend URL for email verification links
FRONTEND_URL=http://localhost:8081

# =============================================================================
# GOOGLE SERVICES CONFIGURATION
# =============================================================================

# Google OAuth (for user authentication)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Google Gemini AI API (for AI features in admin panel)
GOOGLE_AI_API_KEY=your-google-gemini-api-key

# Google Maps API (for location services)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# FRONTEND CONFIGURATION (Vite)
# =============================================================================

# API Base URL (use /api for development with proxy, full URL for production)
VITE_API_BASE_URL=/api

# Alternative API URL (used in some components)
VITE_API_URL=/api

# =============================================================================
# CLOUDINARY CONFIGURATION (File Storage)
# =============================================================================

# Cloudinary settings for image/file storage
CLOUDINARY_CLOUD_NAME=durdb7hxw
CLOUDINARY_API_KEY=647168559376263
CLOUDINARY_API_SECRET=6SRLFCnJzUmcxEkYBs28njXmyhM

# File Storage Options
USE_LOCAL_STORAGE=False

# =============================================================================
# SECURITY & SSL CONFIGURATION
# =============================================================================

# SSL/TLS Settings (for production)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=False
SECURE_CROSS_ORIGIN_OPENER_POLICY=same-origin-allow-popups
SECURE_CROSS_ORIGIN_EMBEDDER_POLICY=

# =============================================================================
# OTP & VERIFICATION CONFIGURATION
# =============================================================================

# OTP Settings
OTP_EXPIRY_MINUTES=30
OTP_LENGTH=6
EMAIL_VERIFICATION_REQUIRED=True

# =============================================================================
# ADMIN FEATURE FLAGS
# =============================================================================

# Admin Panel Features
ADMIN_FEATURES_V2=True
ADMIN_NOTIFICATIONS_V2=True
ADMIN_ORDERS_TIMELINE=True

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# For Development:
# - Set DEBUG=True
# - Use console email backend for testing
# - Use /api for VITE_API_BASE_URL (Vite proxy handles routing)
# - Set USE_LOCAL_STORAGE=False to use Cloudinary

# For Production:
# - Set DEBUG=False
# - Use smtp email backend
# - Set full API URL for VITE_API_BASE_URL
# - Configure proper SSL settings
# - Use strong SECRET_KEY and JWT_SECRET_KEY
# - Set proper ALLOWED_HOSTS

# =============================================================================
# REQUIRED SERVICES SETUP
# =============================================================================

# 1. MySQL Database:
#    - Install MySQL server
#    - Create database: chefsync_db
#    - Update DB_* variables above

# 2. Google Services:
#    - Google OAuth: https://console.developers.google.com/
#    - Google Maps: https://console.cloud.google.com/
#    - Google Gemini AI: https://makersuite.google.com/

# 3. Brevo Email Service:
#    - Sign up at https://www.brevo.com/
#    - Get SMTP credentials
#    - Update EMAIL_* variables above

# 4. Cloudinary (Optional):
#    - Sign up at https://cloudinary.com/
#    - Get API credentials
#    - Update CLOUDINARY_* variables above
